---
import { Card, CardGrid } from "@astrojs/starlight/components";
import { Image } from "astro:assets";
import Layout from "../layouts/LandingPage.astro";
import Footer from "$components/Footer.astro";
import logoSrc from "$assets/logo/threlte-logo.png";
// import Hero from "$components/Hero/HeroWrapper.svelte";
import Socials from "../components/SocialIcons.astro";

const docsURL = "/learn/getting-started/intro";
---

<Layout>
  <header class="flex flex-row justify-between items-center">
    <Image src={logoSrc} width={222} alt="" class="p-4" />
    <nav>
      <a href={docsURL}>Documentation</a>
    </nav>
    <div>
      <Socials />
    </div>
  </header>
  <!-- <Hero /> -->
  <div>
    <a href="/learn/getting-started/intro">Start Building</a>
    <br />
    <a href="https://starlight.astro.build">Read the Starlight docs</a>
  </div>
  <div class="flex flex-col gap-14 py-24">
    <div class="flex flex-col items-center gap-4">
      <div class="text-faded flex-1 text-center text-2xl font-light">
        A 3D framework for the web.<br />
        Built on top of
        <span class="text-orange font-bold">Svelte</span>
        and
        <span class="text-orange font-bold">Three.js</span>.
      </div>

